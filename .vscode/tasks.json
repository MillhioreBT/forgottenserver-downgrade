        {
            "label": "üêû Build (Debug Visual Studio x64)",
            "type": "shell",
            "command": "msbuild.exe",
            "args": [
                "${workspaceFolder}\\vc17\\theforgottenserver.vcxproj",
                "/p:Configuration=Debug",
                "/p:Platform=x64",
                "/p:UseIncrementalLinking=true",
                "/p:LinkIncremental=true",
                "/m",
                "/v:minimal"
            ],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c"]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
