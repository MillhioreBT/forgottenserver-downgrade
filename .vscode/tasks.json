{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üêû Build (Debug Linux)",
            "type": "shell",
            "command": "mkdir -p build-debug && cd build-debug && cmake -DCMAKE_BUILD_TYPE=Debug .. && cmake --build . -- -j8",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$codelldb-rustc"]
        },
